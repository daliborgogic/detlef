.page-enter-active
  animation: acrossIn .45s ease-out both
.page-leave-active
  animation: acrossOut .65s ease-in both

@keyframes acrossIn
  0%
    opacity 0
    // transform: translate3d(0, -5%, 0)
  100%
    opacity 1
    // transform: translate3d(0, 0, 0)

@keyframes acrossOut
  0%
    opacity
    transform: translate3d(0, 0, 0)
  100%
    opacity 0
    transform: translate3d(0, 5%, 0)

nav
  display none
