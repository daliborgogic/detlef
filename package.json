{
  "name": "detlef",
  "version": "1.0.0",
  "description": "Progressive Web App",
  "scripts": {
    "dev": "node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "build": "nuxt build",
    "precommit": "npm run lint",
    "test": "NODE_ENV=production ava",
    "workbox": "workbox generateSW workbox-config.js",
    "start": "NODE_ENV=production node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "micro": "^9.3.2",
    "node-fetch": "^2.2.0",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "1.0.0-beta.8",
    "babel-eslint": "^8.2.6",
    "eslint": "^5.2.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-vue": "^4.7.1",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "r2": "^2.0.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "test-listen": "^1.1.0",
    "vueisotope": "^3.1.2",
    "workbox-cli": "^3.4.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.5"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-console": "error",
      "vue/max-attributes-per-line": "off"
    }
  }
}
