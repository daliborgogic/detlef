{
  "name": "detlef",
  "version": "1.0.0",
  "description": "Progressive Web App",
  "scripts": {
    "dev": "node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "dev:start": "NODE_ENV=production node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "build": "nuxt build",
    "precommit": "npm run lint",
    "test": "ava --serial --verbose",
    "workbox": "workbox generateSW workbox-config.js",
    "prestart": "rm -rf .nuxt node_modules && npm i && nuxt build && npm run workbox",
    "start": "NODE_ENV=production node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "@nuxtjs/pwa": "^2.0.8",
    "crypto": "^1.0.1",
    "dotenv": "^6.0.0",
    "micro": "^9.3.2",
    "node-fetch": "^2.2.0",
    "nuxt-edge": "^2.0.0-25552561.fceb30b"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "^8.2.6",
    "babel-preset-env": "^1.7.0",
    "cookieparser": "^0.1.0",
    "eslint": "^5.2.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-vue": "^4.7.1",
    "js-cookie": "^2.2.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "r2": "^2.0.1",
    "request-promise": "^4.2.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "test-listen": "^1.1.0",
    "vueisotope": "^3.1.2",
    "workbox-cli": "^3.4.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "tap": false,
    "verbose": true
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-console": "error",
      "vue/max-attributes-per-line": "off"
    }
  }
}
