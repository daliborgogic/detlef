{
  "name": "detlef",
  "version": "1.0.0",
  "description": "Progressive Web App",
  "scripts": {
    "dev": "node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "build": "nuxt build",
    "precommit": "npm run lint",
    "start": "NODE_ENV=production node -r dotenv/config node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "@nuxtjs/dotenv": "^1.1.1",
    "@nuxtjs/pwa": "^2.0.8",
    "micro": "^9.3.2",
    "nuxt-edge": "^2.0.0-25552561.fceb30b"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "cookieparser": "^0.1.0",
    "eslint": "^5.2.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-vue": "^4.7.1",
    "js-cookie": "^2.2.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "r2": "^2.0.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vueisotope": "^3.1.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-console": "off",
      "vue/max-attributes-per-line": "off"
    }
  }
}
