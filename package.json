{
  "name": "detlef",
  "version": "1.0.0",
  "description": "Progressive Web App.",
  "scripts": {
    "dev": "node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "build": "nuxt build",
    "precommit": "npm run lint",
    "workbox": "workbox generateSW workbox-config.js",
    "start": "NODE_ENV=production node_modules/.bin/micro -l tcp://0.0.0.0:3000",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "@nuxtjs/style-resources": "^0.1.1",
    "dotenv": "^6.0.0",
    "micro": "^9.3.2",
    "node-fetch": "^2.2.0",
    "nuxt": "^2.3.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.1.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "r2": "^2.0.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vueisotope": "^3.1.2",
    "workbox-cli": "^3.4.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-console": "error",
      "vue/max-attributes-per-line": "off"
    }
  }
}
